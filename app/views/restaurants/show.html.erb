<div class="row">
	<div class="col-md-3">
		<%= image_tag @restaurant.image_url %>

		<h3>
		  <strong><%= @restaurant.name %></strong>
		</h3>

		<div class="star-rating" data-score= <%= @avg_rating %> ></div>
		<p style="font-size: 8pt"><%= "#{@breviews.length} Beer Reviews" %></p>

		<p>
		  <strong>Address:</strong>
		  <%= @restaurant.address %>
		</p>

		<p>
		  <strong>Phone:</strong>
		  <%= @restaurant.phone %>
		</p>

		<p>
		  <strong>Website:</strong>
		  <%= link_to @restaurant.website, "http://" + @restaurant.website, class: "btn btn-link", target: "_blank" %>
		</p>
	</div>

	<div class="col-md-9">
		<% if @breviews.blank? %>
			<h4>No Beer Reviews for this restaurant.  Be the first to let us know about the best beers they have!</h4>
		<% else %>
			<%= link_to 'New Review', new_restaurant_beer_review_path(@restaurant), class: "btn btn-primary" %>
			<table class="table">
				<tbody>
					<% @breviews.each do |beerreview| %> 
						<tr>
							<td>
								<div class="star-rating" data-score= <%= beerreview.rating %> ></div>
								<p><%= h(beerreview.comments).gsub(/\n/, '<br />').html_safe %></p>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
		<% end %>
	</div>
</div>

<%= link_to 'Edit', edit_restaurant_path(@restaurant), class: "btn btn-link" %> |
<%= link_to 'Back', restaurants_path, class: "btn btn-link" %>

<script>
	$('.star-rating').raty({path: "https://s3.amazonaws.com/beermeduncan/rating/",
		readOnly: true,
		score: function() {
			return $(this).attr('data-score');
		}
	});
</script>