<h1>Listing Beer Reviews</h1>

<table class="table table-hover table-condensed" >
  <thead>
    <tr>
      <th>Rating</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @beer_reviews.each do |beer_review| %>
      <tr>
        <td><%= beer_review.rating %></td>
        <td><%= beer_review.comments %></td>
        <td><%= link_to 'Edit', edit_beer_review_path(beer_review), class: "btn btn-link"  %></td>
        <td><%= link_to 'Destroy', beer_review, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

